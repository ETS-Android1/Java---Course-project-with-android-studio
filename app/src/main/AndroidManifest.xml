<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hotsoup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LoadProfile"
        android:allowBackup="true"
        android:icon="@drawable/logo_main"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_main"
        android:supportsRtl="true"
        android:theme="@style/Theme.HotSoup">
        <activity android:name=".EditProfileActivity"/>
        <activity android:name=".MainScreenActivity" />
        <activity android:name=".SignUpProfileActivity" />
        <activity android:name=".SigninProfileActivity" />
        <activity android:name=".userMealDiary"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".MainActivity"/>
            <activity android:name=".foodDataHarvester"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>